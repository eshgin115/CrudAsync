@using DemoApplication.Areas.Admin.ViewModels.Subscribe
@model List<ListSubscribeViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="book" asp-action="add" target="_blank" class="btn btn-secondary">Add new book</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Created at</th>
                            <th>UpdatedAt</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var email in Model)
                        {
                            <tr>
                                <td>@email.Id</td>
                                <td>@email.Email</td>
                                <td>@email.CreatedAt.Day</td>
                                <td>@email.UpdatedAt.ToString("dd/MM/yy")</td>
                                <td class="text-end">
                                    <button type="submit" form="book-form-@email.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>